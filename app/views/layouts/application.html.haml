!!!
%html
  %head
    %title Ecommerce
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    :javascript
      toastr.options = {
        positionClass: "toast-top-left",
        timeout: "2000",
        extendedTimeout: "2000",
      }
    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          = link_to "Home", root_path, class: "navbar-brand"
        .navbar-collapse.collapse#navbar-main
          %ul.nav.navbar-nav.navbar-right
            %li= link_to "Sell", new_article_path
            - if user_signed_in?
              %li= link_to "Account", user_path(current_user), id: "account"
              %li= link_to "Logout", destroy_user_session_path, method: "delete"
            - else
              %li= link_to "Login", new_user_session_path
              %li= link_to "Register", new_user_registration_path
          %form.navbar-form.navbar-right
            %input.form-control.col-lg-8{type: "text", id: "search", placeholder: "Search"}
    .container#main
      = yield

    #footer
      .container.center
        %a{href: "https://github.com/AAlvAAro/ecommerce", target: "blank"} AAlvAAro
    
    = custom_flash_messages
    
    

